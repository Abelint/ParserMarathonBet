<Window x:Class="ParserMarathonBet.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Marathonbet Parser" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="UrlTextBox" Text="https://www.marathonbet.ru/su/live/26418" Margin="10"/>
            <Button Name="LoadButton" Content="Load Data" Click="LoadButton_Click" Margin="10"/>
          
            <Grid>
                <ListBox Name="GroupsListBox" SelectionChanged="GroupsListBox_SelectionChanged" DisplayMemberPath="GroupName"/>
                <DataGrid Name="EventsDataGrid" AutoGenerateColumns="True" Margin="0,200,0,0"/>
            </Grid>
        </StackPanel>
       
    </Grid>
    
</Window>
